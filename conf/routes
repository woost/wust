# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET / controllers.Application.index(any = "none")

# Play routes serving JSON to AngularJS start with /api
GET /api/graphs controllers.Graphs.index
GET /api/graphs/:id controllers.Graphs.show(id: String)
POST /api/graphs controllers.Graphs.create
DELETE /api/graphs/:id controllers.Graphs.remove(id: String)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.at(path="/public", file)

# Redirect all unknown routes to the index page
GET /*any controllers.Application.index(any)
