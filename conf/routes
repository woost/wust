# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET / controllers.Application.index(any = "none")

# Play routes serving JSON to AngularJS start with /api
GET /api/problems controllers.Problems.index
GET /api/problems/:uuid controllers.Problems.show(uuid: String)
GET /api/problems/:uuid/goals controllers.Problems.showGoals(uuid: String)
GET /api/problems/:uuid/ideas controllers.Problems.showIdeas(uuid: String)
POST /api/problems/:uuid/ideas controllers.Problems.createIdea(uuid: String)
POST /api/problems/:uuid/goals controllers.Problems.createGoal(uuid: String)
POST /api/problems controllers.Problems.create

GET /api/ideas/:uuid controllers.Ideas.show(uuid: String)
GET /api/ideas controllers.Ideas.index
POST /api/ideas controllers.Ideas.create

GET /api/graphs controllers.Graphs.index
GET /api/graphs/:uuid controllers.Graphs.show(uuid: String)
DELETE /api/graphs/:uuid controllers.Graphs.remove(uuid: String)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.at(path="/public", file)

# Redirect all unknown routes to the index page
GET /*any controllers.Application.index(any)
